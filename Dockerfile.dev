# =====================================================
# Web Notes - Development Dockerfile
# Hot reload enabled for rapid iteration
# =====================================================

FROM python:3.12-slim

WORKDIR /app

# Install curl for healthcheck and watchfiles for hot reload
RUN apt-get update && apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/* && \
    pip install --no-cache-dir fastapi uvicorn[standard] watchfiles

# Create non-root user
RUN useradd -m -u 1000 webnotes && \
    mkdir -p /data && \
    chown -R webnotes:webnotes /data /app

# Copy application code
COPY --chown=webnotes:webnotes . .

# Switch to non-root user
USER webnotes

# Environment
ENV PYTHONUNBUFFERED=1
ENV WEBNOTES_DB_PATH=/data/notes.db

# Expose port
EXPOSE 8888

# Run with hot reload enabled
CMD ["python", "-m", "uvicorn", "backend.app:app", "--host", "0.0.0.0", "--port", "8888", "--reload", "--reload-dir", "backend"]
